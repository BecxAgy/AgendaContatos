@model ContatoViewModel

<div class="container-fluid">

<div class="row">
        @foreach(var Contato in Model.ListaContatos)
        {
            <div class="col-lg-4 col-md-5 col-sm-8">
                   <div class="card" style="width: 18rem;">
                <img src="~/img/otherFem.jpg" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">@Contato.Name</h5>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Contato.Phone </li>
                    <li class="list-group-item">@Contato.Email</li>
                  </ul>
                  <div class="card-body">
                    <a asp-action="Edit" asp-route-id="@Contato.Id" class="card-link">
                        <i class="fa-solid fa-wrench" style="color: #000000;"></i>
                     </a>
                    <a data-bs-toggle="modal" data-bs-target="#exampleModal" class="card-link"><i class="fa-solid fa-trash" style="color: #f70808 !important;"></i></a>
                  </div>
                </div>
            </div>

            
        }
</div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Deseja realmente excluir</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ao excluir o contato você irá perdê-lo definitivamente. 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a asp-route-id="" asp-controller="ContatoController" asp-action="Delete" class="btn btn-primary">Excluir</a>
                </div>
            </div>
        </div>
    </div>
</div>
